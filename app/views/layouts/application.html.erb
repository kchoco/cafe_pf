<!DOCTYPE html>
<html>
  <head>
    <title>Uncafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
  </head>

  <body>
<header>
  <nav class="navbar navbar-expand-lg p-4 fixed-top" style="background-color:#F4F0EC;">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag "logo.png", size:"150x100" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li><%= link_to ' Mypage',user_path(current_user),class: "btn btn-outline-dark r-3" %></li>
          <li><div class="ml-5"><%= link_to 'PostImage', new_post_image_path, class: "btn btn-outline-dark r-3" %></div></li>
          <li><div class="ml-5"><%= link_to 'Timeline', post_images_path , class: "btn btn-outline-dark" %></div></li>
          <li><div class="ml-5"><%= link_to 'Contact', new_contact_path, class: 'btn btn-outline-dark'%></div></li>
          <li><div class="ml-5"><%= link_to 'Log out', destroy_user_session_path, method: :delete,class: "btn btn-outline-dark" %></div></li>
        <% else %>
          <li><div class="ml-5"><%= link_to'About', about_path, class: "btn btn-outline-dark" %></div></li>
          <li><div class="ml-5"><%= link_to 'Contact', new_contact_path, class: 'btn btn-outline-dark'%></div></li>
          <li><div class="ml-5"><%= link_to'Sign up', new_user_registration_path, class: "btn btn-outline-dark" %></div></li>
          <li><div class="ml-5"><%= link_to'Log in', new_user_session_path , class: "btn btn-outline-dark" %></div></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

