<main>
  <!-- 画像表示 -->
  <div class = "container">
    <div class="post-body">
      <h2><%= @post_image.title %></h2>
      <div class="media">
        <div class="ml-4"><%= attachment_image_tag @post_image, :image, size: "600x400" %></div>
        <!-- ユーザ投稿情報 -->
        <div class="media-body">
          <div class="ml-3">
            <h3><%= link_to user_path(@post_image.user) do %>
            <!-- ユーザ画像表示 -->
            <%= attachment_image_tag @post_image.user, :profile_image, fallback: "noimage.png", size:"80", class: "rounded-circle d-flex ml-2" %><%= @post_image.user.nickname %>
            <% end %>
            </h3>
            <div id="favorite_buttons_<%= @post_image.id %>">
              <%= render'favorites/favorite', post_image: @post_image %>
            </div>
            <p style="text-align: right">
              <%= @post_image.created_at.strftime('%Y/%m/%d') %>
              <% if @post_image.user == current_user %>
                <%= link_to "削除", post_image_path(@post_image), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %>
              <% end %>
            </p>
          </div>

          <div class = "border"></div>

          <div class="ml-5">
            <p><%= safe_join(@post_image.introduction.split("\n"),tag(:br)) %></p>
            <%= link_to user_path(@post_image.user) do %>
            <% end %>
          </div>
        </div>
      </div>
      <br>
      <div class = "border"></div>

<!-- 地図機能 -->
      <h4>Map</h4>

      <br>
      <div class = "border"></div>

<!-- コメント機能　フォーム-->
      <h4>Comments</h4>

      <br>
      <br>
<!--　コメント機能一覧表示 -->

  <%= form_with model:[@post_image,@post_comment] do |f| %>
  <%= f.text_area :comment, size:"60x5",placeholder: "コメント" %>
  <button type="submit" class="button1">
          <i class="far fa-paper-plane"></i>送信
        </button>
<% end %>
<div id = "post_image_<%= @post_image.id %>">
<%= render 'post_comments/index', post_image: @post_image %>
</div>

</div>
</div>
</main>

