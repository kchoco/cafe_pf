
<main>
  <div class = "container">
    <h1>Timeline</h1>
    <p style="text-align: right">
    <div class="search-form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
    <% end %>
 　　</div>
 　</p>
 　<% @post_images.each do |post_image| %>
 　<div>
 　  <div class = "box4">
 　    <div class="media">
 　      <p><img class="rounded-circle d-flex ml-2"<%= attachment_image_tag post_image.user, :profile_image, fallback: "noimage.png", size:"80" %></p>
 　      <div class="ml-1">
 　      <%= post_image.user.nickname %>
 　      <%= post_image.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
      </div>
      <div class ="border"></div><br>
      <center><%= link_to post_image_path(post_image.id) do %>
      <%= attachment_image_tag post_image, :image, size: "300x200" %></center>
      <% end %>
      <div class="ml-4"><h3><%= post_image.title %></h3>
      <p style="text-align: right">
        <%= link_to "#{post_image.post_comments.count}", post_image_path(post_image.id), class: "far fa-comments" %></div>
      </p>
    </div>
  </div>
<% end %>
</div>
</main>