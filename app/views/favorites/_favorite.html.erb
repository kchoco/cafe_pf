    <% if post_image.favorited_by?(current_user) %>
        <%=link_to post_image.favorites.count, post_image_favorites_path(post_image), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
    <% else %>
        <%=link_to post_image.favorites.count, post_image_favorites_path(post_image), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
    <% end %>
