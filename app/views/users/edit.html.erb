<main>
  <div class='container'>
    <h1>User edit</h1>
    <div class='row'>
      <div class="box2">
        <%= form_with model:@user, local:true do |f| %>
        <%= attachment_image_tag @user, :profile_image, fallback: "noimage.png", size:"250"%>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :Profile %>
        <%= f.text_field :profile, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit '更新する',class: 'btn btn-outline-secondary' %>
        <%= link_to "退会する", unsubscribe_user_path, class: 'btn btn-outline-danger' %>
        </div>
    <% end %>
    </div>
    </div>
  </div>
</div>
</main>