<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 class="m-3">ユーザ情報編集</h3>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :Profile %>
        <%= f.text_field :profile, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit '更新する',class: 'btn btn-primary' %>
        <%= link_to "退会する", unsubscribe_user_path, class: 'btn btn-danger' %>
        </div>
    <% end %>
    </div>
  </div>
</div>